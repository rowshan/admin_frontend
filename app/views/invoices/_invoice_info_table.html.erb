
<!--table responsive and  scrolls horizontally-->


<div class="panel-body">
  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
      <thead>
      <tr>

        <th>Invoice Id #</th>
        <th>Invoice Date</th>
        <th>Invoice No.</th>
        <th>User</th>
        <th>Vat(%)</th>
        <th>Total Amount</th>
        <th>Tenant_id</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tr>
        <% @invoices.each do |key, value| %>
            <td><%=  "#{value}" %></td>
        <% end %>

        <td><%= link_to "Show", invoice_path(@invoices[:id]) %></td>
        <td><%= link_to "Edit", edit_invoice_path(@invoices[:id]) %></td>
        <td><%= link_to "Remove",invoice_path(@invoices[:id]), method: :delete, data: { confirm: "Are you sure?" } %></td>

      </tr>

    </table>
  </div>
</div>
