<% provide(:title, "Reset password") %>

<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_tag password_resets_path, method: "post" do %>
        <fieldset>

          <%= label_tag :Email %>
          <%= text_field_tag :login, params[:login], class: 'form-control', placeholder: "Please enter your email address" %>

          <div class="actions">
            <%= submit_tag "password reset", class: "btn btn-primary" %>
          </div>
        </fieldset>
        </div>
        </div>
    <% end %>
